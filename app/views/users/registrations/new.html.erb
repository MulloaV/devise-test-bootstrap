<div class='col-lg-6 mx-lg-auto'>
  <div class='card shadow'>
    <div class='card-header'>
      <h2 class='card-tittle text-center'> Sign Up </h2>
    </div>    
    <div class='card-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { data: { turbo: false} }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group mb-2">
            <%= f.label :first_name, class: 'mb-2' %>
            <%= f.text_field :first_name, class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :last_name, class: 'mb-2' %>
            <%= f.text_field :last_name, class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :phone, class: 'mb-2' %>
            <%= f.text_field :phone, class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :address, class: 'mb-2' %>
            <%= f.text_field :address, class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :city, class: 'mb-2' %>
            <%= f.text_field :city, class: 'form-control form-control-lg' %>
          </div>
          
          <div class="form-group mb-2">
            <%= f.label :username, class: 'mb-2' %>
            <%= f.text_field :username, class: 'form-control form-control-lg' %>
          </div>


          <div class="form-group mb-2">
            <%= f.label :email, class: 'mb-2' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :password, class: 'mb-2' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :password_confirmation, class: 'mb-2' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group mb-2">
            <%= f.submit "Sign up",  class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
  </div>
</div>